<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title><%= title %></title>
<%= csrf_meta_tag %>

<% if signed_in? %>

  <%= stylesheet_link_tag 'profile', :media => 'screen' %>

<% else %>

  <%= stylesheet_link_tag 'index', :media => 'screen' %>

<% end %>

<%= javascript_include_tag :defaults %>

</head>

<body>

<div class="container">

      <%= render 'layouts/header' %>

      <%= render 'layouts/second_navigation' %>

      <%= render 'layouts/space_navigation_content' %>

      <div id="content_base">

          <div id="content">

            <%= render 'layouts/title' %>

            <% if signed_in? %>

              <%= render 'layouts/profilesethome' %>

            <% else %>

              <%= render 'layouts/instruction' %>

            <% end %>

            <%= render 'layouts/footer_top_gap' %>

            <%= render 'layouts/available_mentors' %>

            <%= render 'layouts/footer_top_gap' %>

            <%= render 'layouts/available_apprentices' %>

            <%= render 'layouts/footer_top_gap' %>

            <%= render 'layouts/footer' %>

          <!-- end #content --></div>

      <!-- end #content_base --></div>

<!-- end .container --></div>

</body>
</html>

